<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FE6EF"
    tools:context=".FastFoodDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ff_details_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/spaghetti" />

        <TextView
            android:id="@+id/ff_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff_details_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Mì Spaghetti"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ff_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff_details_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="10.000d"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ff_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff_details_price"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Nguyên liệu: "
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ff_details_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff_material"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Details nguyên liệu: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ff_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff_details_material"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Cách làm: "
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/ff_details_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff_method"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Details cách làm: "
            android:textColor="@color/black"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/ff_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff_details_method"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Nơi bán: "
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ff_details_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ff_location"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>
</ScrollView>